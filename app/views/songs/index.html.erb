<h1>All Songs</h1>

<ul>
  <table>
    <thead>
    <tr>
      <th>Song Title</th>
      <th>Artist</th>
      <th>Delete?</th>
    </tr>
    <thead>
    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td><%=link_to song.title, song_path(song)%></td>
          <td><%=song.artist_name%></td>
          <td style="text-align:center;"><%= link_to 'X', song, method: :delete, data: { confirm: 'Delete Song?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</ul>

<div><%=link_to "New Song", new_song_path %></div>
